{
   "$schema": "http://json-schema.org/draft-07/schema#",
   "$id": "https://swarm-analytics.com/schema/event/peopleinsights/1.2",
   "title": "People Insights Event Schema",
   "definitions": {
      "id": {
         "type": "string",
         "examples": [
            "56317209-9B83-43A6-A63E-58C9191A7869"
         ]
      },
      "node": {
         "type": "object",
         "properties": {
           "id": {
             "$ref": "#/definitions/id"
           },
           "name": {
             "type": "string"
           }
         },
         "required": [
           "id",
           "name"
         ]
       },
      "capacityMonitoringEvent": {
         "type": "object",
         "properties": {
            "virtualDoorEvent": {
               "$ref": "#/definitions/virtualDoorEvent"
            },
            "zoneEvent": {
               "$ref": "#/definitions/zoneEvent"
            }
         },
         "oneOf": [
            {
               "required": [
                  "zoneEvent"
               ]
            },
            {
               "required": [
                  "virtualDoorEvent"
               ]
            }
         ],
         "additionalProperties": false
      },
      "virtualDoorEvent": {
         "type": "object",
         "properties": {
            "virtualDoorId": {
               "$ref": "#/definitions/id"
            },
            "virtualDoorName": {
               "type": "string"
            },
            "direction": {
               "type": "string",
               "enum": [
                  "in",
                  "out"
               ]
            },
            "timestamp": {
               "type": "string",
               "format": "date-time"
            },
            "object": {
               "type": "object",
               "properties": {
                  "class": {
                     "type": "string",
                     "enum": [
                        "person"
                     ]
                  }
               },
               "required": [
                  "class"
               ]
            }
         },
         "required": [
            "virtualDoorId",
            "virtualDoorName",
            "timestamp",
            "direction",
            "object"
         ]
      },
      "zoneEvent": {
         "type": "object",
         "properties": {
            "zoneId": {
               "$ref": "#/definitions/id"
            },
            "zoneName": {
               "type": "string"
            },
            "triggerType": {
               "enum": [
                  "time",
                  "change"
               ]
            },
            "timestamp": {
               "type": "string",
               "format": "date-time"
            },
            "state": {
               "type": "string",
               "enum": [
                  "occupied",
                  "vacant"
               ]
            },
            "objects": {
               "type": "array",
               "items": {
                  "type": "object",
                  "properties": {
                     "class": {
                        "type": "string"
                     },
                     "dwellTime": {
                        "type": "number"
                     }
                  },
                  "required": [
                     "class"
                  ]
               }
            },
            "objectsCount": {
              "type": "object",
            },
         },
         "required": [
            "zoneId",
            "zoneName",
            "triggerType",
            "timestamp",
            "state",
            "objects"
         ]
      }
   },
   "type": "object",
   "properties": {
      "version": {
         "type": "string",
         "const": "1.2"
      },
      "eventSchema": {
         "type": "string"
      },
      "node": {
         "$ref": "#/definitions/node"
      },
      "capacityMonitoringEvent": {
         "$ref": "#/definitions/capacityMonitoringEvent"
      }
   },
   "required": [
      "version",
      "eventSchema",
      "node",
      "capacityMonitoringEvent"
   ],
   "additionalProperties": false
}